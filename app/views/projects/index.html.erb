<html>
  <head>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <meta name="description" content="Home Page">
    <meta name="author" content="Julian Smith">
    <title>Home</title>
  </head>
  <body>
    <!--Navigation Bar-->
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
      <a class="navbar-brand" href="/">Portfolios</a>
      <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarsExampleDefault" aria-controls="navbarsExampleDefault" aria-expanded="false" aria-label="Toggle navigation">
        <span class="navbar-toggler-icon"></span>
      </button>

      <div class="collapse navbar-collapse" id="navbarsExampleDefault">
        <ul class="navbar-nav mr-auto">
          <li class="nav-item active">
            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
          </li>
          <% if user_signed_in? %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_out" data-method="Delete" data-confirm="Are you sure?">Sign-out</a>
            </li>
          <% else %>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_in">Sign-in</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/users/sign_up">Sign-up</a>
            </li>
          <% end %>
          <li class="nav-item dropdown">
            <a class="nav-link dropdown-toggle" href="http://example.com" id="dropdown01" data-toggle="dropdown" aria-haspopup="true" aria-expanded="false">Useful Links</a>
            <div class="dropdown-menu" aria-labelledby="dropdown01">
              <a class="dropdown-item" href="/projects">Projects</a>
              <a class="dropdown-item" href="https://github.com/JulesVerne22/cs3300">GitHub</a>
              <a class="dropdown-item" href="/about">About Us</a>
            </div>
          </li>
        </ul>
        <!-- <form class="form-inline my-2 my-lg-0">
          <input class="form-control mr-sm-2" type="text" placeholder="Search" aria-label="Search">
          <button class="btn btn-outline-success my-2 my-sm-0" type="submit">Search</button>
        </form> -->
      </div>
    </nav>

    <!--Main Body-->
    <main role="main">
      <!--Main Title-->
      <div class="jumbotron">
        <div class="container">
          <h1 class="display-3">Portfolio</h1>
          <p></p>
        </div>
      </div>

      <!--Information-->
      <div class="container">
        <div class="row">
          <% @projects.each do |project| %>
            <div class="col-md-4">
              <div class="card mb-4 box-shadow">
                <div class="card-header">
                  <h2><%= project.title %></h2>
                </div>
                <div class="card-body">
                  <p class="card-text" style="font-size: 16px" id="substring-<%= project.id %>">
                    <script type="text/javascript">
                      str = "<%= project.description %>";
                      document.getElementById('substring-<%= project.id %>').innerHTML = str.substring(0,150) + "...";
                    </script>
                  </p>
                  <div class="d-flex justify-content-between align-items-center">
                    <div class="btn-group">
                      <a class="btn btn-sm btn-outline-secondary" href="projects/<%= project.id %>" role="button">More Details</a>
                      <% if user_signed_in? %>
                        <a class="btn btn-sm btn-outline-secondary" href="projects/<%= project.id %>/edit" role="button">Edit</a>
                        <a class="btn btn-sm btn-outline-secondary" href="projects/<%= project.id %>" data-method="delete" data-confirm="Are you sure?" role="button">Delete</a>
                      <% else %>
                      <% end %>
                    </div>
                  </div>
                </div>
              </div>
            </div>
          <% end %>
        </div>
        <hr>
      </div>
      <div class="container">
        <% if user_signed_in? %>
          <div class="row">
           <div class="col-md-4">
              <p><a class="btn btn-secondary" href="projects/new" role="button">New Project</a></p>
           </div>
          </div>
        <% else %>
        <% end %>
        <br>
        <br>
      </div>
    </main>

    <!--Footer-->
    <footer class="container"></footer>
      <div class="container">
        <div class="row justify-content-md-center">
          <div class="col-md-4">
            <p>&copy; Julian Inc. 2022-Present</p>
          </div>
        </div>
      </div>
    </footer>
  </body>
</html>
